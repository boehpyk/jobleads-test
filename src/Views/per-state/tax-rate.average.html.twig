{% extends "base.html.twig" %}


{% block body %}

    <h1>The average county tax rate per state</h1>

    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>State name</th>
                <th>Average amount of taxes</th>
            </tr>
        </thead>
    {% for item in data %}
        <tr>
            <td>{{ item.name }}</td>
            <td>{{ (item.tax_rate*100)|number_format(2) }}%</td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}